<h1><%= @prefecture.place %></h1>
<div class="container">
    <% @hotels.each do |hotel| %>
        <div class="card" style="width: 18rem;">
        <img src=<%= hotel.picture_url %> class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title"><%= hotel.name %></h5>
            <h6 class="card-text"><%= @prefecture.prefecture.name %></h6>
            <h6 class="card-text"><%= hotel.detail %></h6>
            <a href=<%= hotel_path(hotel) %> class="btn btn-primary">詳細情報</a>
            <a href=<%= new_hotel_review_path(hotel) %> class="btn btn-primary">レビューを書く</a>
        </div>
        </div>  
    <% end %>
</div>

